<%= form_for(@ad) do |f| %>
  <% if @ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% @ad.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :condition %><br>
    <%= f.select :condition, ['New','Used','Refurbished','Factory Refurbished'], :prompt => 'Select One' %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, ['Cellphones','Accessories','Simcards'], :prompt=> 'Select One' %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.select :location,['New York', 'New jersey','Conneticut','Pennsylvania'], :prompt => 'Select One' %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
